{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "analysis": {
      "filter": {
        "en_stopwords": {
          "type": "stop",
          "stopwords": [
            "advanced",
            "basics"
          ]
        }
      },
      "analyzer": {
        "trigrams": {
          "tokenizer": "standard",
          "filter": [
            "standard",
            "lowercase"
          ]
        }
      }
    }
  },
  "mappings": {
    "doc": {
      "_all": {
        "enabled": false
      },
      "properties": {
        "name": {
          "type": "text"
        }
      }
    }
  }
}
